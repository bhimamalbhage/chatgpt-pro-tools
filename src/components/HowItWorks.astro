---
const steps = [
  {
    number: '01',
    title: 'Install the Extension',
    description: 'Add ChatGPT Pro Tools to Chrome with one click. No sign-up or configuration needed.',
  },
  {
    number: '02',
    title: 'Open ChatGPT',
    description: 'Navigate to chatgpt.com and you\'ll see the floating action button appear automatically.',
  },
  {
    number: '03',
    title: 'Start Using Tools',
    description: 'Click the button to access all features â€” export chats, save prompts, and navigate instantly.',
  },
];
---

<section id="how-it-works" class="py-20 lg:py-32">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center max-w-2xl mx-auto mb-16">
      <span class="inline-block px-4 py-1.5 bg-green-100 text-green-700 rounded-full text-sm font-medium mb-4">
        How It Works
      </span>
      <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">
        Get Started in Seconds
      </h2>
      <p class="text-lg text-gray-600">
        No complicated setup. Install once and it just works.
      </p>
    </div>

    <!-- Steps -->
    <div class="relative">
      <!-- Connector line (hidden on mobile) -->
      <div class="hidden lg:block absolute top-24 left-0 right-0 h-0.5 bg-gradient-to-r from-transparent via-gray-200 to-transparent"></div>

      <div class="grid md:grid-cols-3 gap-8 lg:gap-12">
        {steps.map((step, index) => (
          <div class="relative text-center">
            <!-- Step number -->
            <div class="relative inline-flex items-center justify-center w-20 h-20 bg-white rounded-2xl shadow-lg border border-gray-100 mb-6 mx-auto">
              <span class="text-2xl font-bold bg-gradient-to-r from-primary-600 to-purple-600 bg-clip-text text-transparent">
                {step.number}
              </span>
              {index < steps.length - 1 && (
                <div class="hidden lg:block absolute -right-[calc(50%+1.5rem)] top-1/2 -translate-y-1/2">
                  <svg class="w-8 h-8 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                  </svg>
                </div>
              )}
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-3">{step.title}</h3>
            <p class="text-gray-600 leading-relaxed max-w-xs mx-auto">{step.description}</p>
          </div>
        ))}
      </div>
    </div>

    <!-- Demo Video Placeholder -->
    <div class="mt-20">
      <div class="relative max-w-3xl mx-auto">
        <div class="bg-gradient-to-br from-gray-900 to-gray-800 rounded-2xl shadow-2xl overflow-hidden aspect-video flex items-center justify-center group cursor-pointer">
          <!-- Play button -->
          <div class="relative z-10">
            <div class="w-20 h-20 bg-white/10 backdrop-blur rounded-full flex items-center justify-center group-hover:scale-110 transition-transform">
              <div class="w-16 h-16 bg-white rounded-full flex items-center justify-center shadow-lg">
                <svg class="w-8 h-8 text-gray-900 ml-1" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M8 5v14l11-7z" />
                </svg>
              </div>
            </div>
          </div>
          <!-- Background pattern -->
          <div class="absolute inset-0 opacity-10">
            <div class="absolute inset-0" style="background-image: radial-gradient(circle at 1px 1px, white 1px, transparent 0); background-size: 24px 24px;"></div>
          </div>
          <p class="absolute bottom-6 text-gray-400 text-sm">Watch demo video (coming soon)</p>
        </div>

        <!-- Decorative elements -->
        <div class="absolute -z-10 -inset-4 bg-gradient-to-r from-primary-500/20 to-purple-500/20 rounded-3xl blur-2xl"></div>
      </div>
    </div>
  </div>
</section>
